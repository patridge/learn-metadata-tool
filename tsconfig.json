{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "types": ["jest", "chrome", "node"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/__mocks__", "src/__tests__"],
  "$schema": "https://json.schemastore.org/tsconfig",
}